        <main class="flex-1 flex flex-col h-full overflow-hidden relative bg-slate-50">
            <header class="h-16 glass-panel border-b border-gray-200 flex items-center justify-between px-6 z-10 sticky top-0">
                <h2 id="page-title" class="text-xl font-bold text-gray-800 tracking-tight">Dashboard</h2>
