    <div id="editor-modal" class="fixed inset-0 z-[60] hidden bg-slate-900/50 backdrop-blur-sm flex items-center justify-center p-4">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl overflow-hidden flex flex-col max-h-[90vh] animate-[scaleIn_0.2s_ease-out]">
            <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center bg-gray-50">
                <h3 id="modal-title" class="text-lg font-bold text-gray-800">Edit Document</h3>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg></button>
            </div>
            
            <div class="p-6 overflow-y-auto">
                <div class="mb-5">
                    <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Document ID</label>
                    <div class="flex gap-2">
                        <input type="text" id="doc-id" class="font-mono flex-1 border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none bg-white" placeholder="Auto-generate if empty">
                    </div>
                </div>
                
                <div class="mb-2 flex justify-between items-center">
                    <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider">Data Object (JSON)</label>
                </div>
                <div id="json-editor"></div>
            </div>

            <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex justify-end gap-3">
                <button onclick="closeModal()" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-600 hover:bg-gray-200 transition">Cancel</button>
                <button onclick="saveDocument()" class="px-4 py-2 rounded-lg text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 shadow-md hover:shadow-lg transition">Save Changes</button>
            </div>
        </div>
    </div>

    <div id="delete-modal" class="fixed inset-0 z-[70] hidden bg-slate-900/60 backdrop-blur-sm flex items-center justify-center p-4">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-sm p-6 text-center animate-[scaleIn_0.2s_ease-out]">
            <div class="w-14 h-14 rounded-full bg-red-50 text-red-500 flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900">Delete this document?</h3>
            <p class="text-sm text-gray-500 mt-2 mb-6">This action is permanent and cannot be undone from this dashboard.</p>
            <div class="flex gap-3 justify-center">
                <button onclick="closeDeleteModal()" class="flex-1 px-4 py-2.5 rounded-lg text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 transition">Cancel</button>
                <button onclick="confirmDelete()" class="flex-1 px-4 py-2.5 rounded-lg text-sm font-medium text-white bg-red-600 hover:bg-red-700 shadow-lg shadow-red-200 transition">Yes, Delete</button>
            </div>
        </div>
    </div>

    <div id="toast" class="fixed bottom-6 right-6 transform translate-y-24 opacity-0 transition-all duration-300 z-[80] bg-slate-800 text-white px-5 py-3 rounded-lg shadow-xl flex items-center gap-3">
        <span id="toast-icon" class="text-xl"></span>
        <span id="toast-msg" class="font-medium text-sm">Notification</span>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-app.js";
        import { getFirestore, collection, getDocs, addDoc, setDoc, deleteDoc, doc, onSnapshot, query, where, limit } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-firestore.js";

        // --- FIREBASE CONFIG ---
        const firebaseConfig = {
            apiKey: "AIzaSyC_lKWa4cM4cT337KkRw4sp7raQHl9aZWk",
            authDomain: "students-login-29409.firebaseapp.com",
            projectId: "students-login-29409",
            storageBucket: "students-login-29409.firebasestorage.app",
            messagingSenderId: "634331456872",
            appId: "1:634331456872:web:6dae360c5e28d8356562dd",
            measurementId: "G-96XXYG1VR2"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        // --- STATE ---
        let currentCollection = 'students'; 
        let unsubscribe = null;
        let deleteTargetId = null;

        // --- ACE EDITOR SETUP ---
        const editor = ace.edit("json-editor");
        editor.setTheme("ace/theme/chrome");
        editor.session.setMode("ace/mode/json");
        editor.setOptions({ showPrintMargin: false, fontSize: "14px", wrap: true });

        // --- LOGIN LOGIC ---
        window.attemptLogin = async () => {
            const password = document.getElementById('admin-pass').value;
            const btn = document.getElementById('login-btn');
            const spinner = document.getElementById('login-spinner');
            const errorMsg = document.getElementById('login-error');

            // UI Loading state
            btn.disabled = true;
            spinner.classList.remove('hidden');
            errorMsg.classList.add('hidden');

            try {
                // Query 'admins' collection for matching password
                const adminsRef = collection(db, "admins");
                const q = query(adminsRef, where("password", "==", password), limit(1));
                const querySnapshot = await getDocs(q);

                if (!querySnapshot.empty) {
                    // Success!
                    const adminData = querySnapshot.docs[0].data();
                    
                    // Update User Profile in UI if 'name' exists
                    if(adminData.name) {
                        document.getElementById('admin-name-display').innerText = adminData.name;
                        document.getElementById('admin-avatar').innerText = adminData.name.charAt(0).toUpperCase();
                    }

                    // Hide Login, Show App
                    document.getElementById('login-screen').classList.add('hidden');
                    document.getElementById('app-container').classList.remove('hidden-app');
                    
                    // Load Initial Data
                    switchCollection('students');
                } else {
                    // Fail
                    throw new Error("Invalid Credentials");
                }
            } catch (err) {
                console.error(err);
                errorMsg.classList.remove('hidden');
                // Shake animation reset
                const panel = document.querySelector('.glass-panel');
                panel.classList.add('animate-bounce'); 
                setTimeout(() => panel.classList.remove('animate-bounce'), 500);
            } finally {
                btn.disabled = false;
                spinner.classList.add('hidden');
            }
        };

        // --- CRUD LOGIC ---

        window.switchCollection = (colName) => {
            currentCollection = colName;
            
            // Highlight Sidebar
            document.querySelectorAll('.nav-item').forEach(el => {
                if(el.dataset.col === colName) {
                    el.classList.add('bg-slate-800', 'border-r-4', 'border-indigo-500');
                    el.classList.remove('hover:bg-slate-800');
                } else {
                    el.classList.remove('bg-slate-800', 'border-r-4', 'border-indigo-500');
                    el.classList.add('hover:bg-slate-800');
                }
            });
            
            document.getElementById('page-title').innerText = colName.charAt(0).toUpperCase() + colName.slice(1);
            loadData();
        };

        function loadData() {
            document.getElementById('loading').classList.remove('hidden');
            document.getElementById('empty-state').classList.add('hidden');
            const container = document.getElementById('data-container');
            container.innerHTML = '';

            if (unsubscribe) unsubscribe();

            const colRef = collection(db, currentCollection);

            unsubscribe = onSnapshot(colRef, (snapshot) => {
                document.getElementById('loading').classList.add('hidden');
                container.innerHTML = ''; 

                if (snapshot.empty) {
                    document.getElementById('empty-state').classList.remove('hidden');
                    return;
                } else {
                    document.getElementById('empty-state').classList.add('hidden');
                }

                snapshot.forEach(docSnap => {
                    const data = docSnap.data();
                    const id = docSnap.id;
                    const jsonString = JSON.stringify(data, null, 2);
                    
                    // Smart Title Detection
                    const title = data.name || data.title || data.email || data.username || data.id || "Document " + id.substring(0,4);
                    
                    // Specific Icons based on collection
                    let iconColor = "bg-indigo-500";
                    if(currentCollection === 'payments') iconColor = "bg-green-500";
                    if(currentCollection === 'tickets') iconColor = "bg-orange-500";
                    if(currentCollection === 'admins') iconColor = "bg-red-500";

                    const card = document.createElement('div');
                    card.className = "bg-white rounded-xl shadow-sm border border-slate-100 hover:shadow-lg transition-all duration-300 flex flex-col h-[280px] group";
                    card.innerHTML = `
                        <div class="p-5 flex-1 overflow-hidden">
                            <div class="flex justify-between items-start mb-3">
                                <span class="text-[10px] font-mono font-bold text-slate-400 bg-slate-100 px-2 py-0.5 rounded uppercase tracking-wide truncate max-w-[120px]">${id}</span>
                                <div class="w-2 h-2 rounded-full ${iconColor} shadow-[0_0_8px_currentColor]"></div>
                            </div>
                            <h4 class="font-bold text-slate-800 text-lg mb-2 truncate">${title}</h4>
                            <div class="relative h-32 group-hover:h-32 transition-all">
                                <pre class="text-xs text-slate-500 bg-slate-50 p-3 rounded-lg h-full overflow-hidden border border-slate-100 font-mono leading-relaxed">${jsonString}</pre>
                                <div class="absolute inset-x-0 bottom-0 h-10 bg-gradient-to-t from-slate-50 to-transparent"></div>
                            </div>
                        </div>
                        <div class="p-4 border-t border-slate-50 bg-slate-50/50 flex gap-3">
                            <button onclick="editDoc('${id}')" class="flex-1 py-2 text-xs font-semibold uppercase tracking-wide text-indigo-600 bg-indigo-50 rounded-lg hover:bg-indigo-100 transition border border-indigo-100">Edit Data</button>
                            <button onclick="askDelete('${id}')" class="px-3 py-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                            </button>
                        </div>
                    `;
                    container.appendChild(card);
                });
            }, (error) => {
                showToast("Access Error: " + error.message, "error");
            });
        }

        // --- MODAL & SAVE HANDLERS ---
        window.openModal = (mode, id = null, data = {}) => {
            const modal = document.getElementById('editor-modal');
            const idInput = document.getElementById('doc-id');
            const title = document.getElementById('modal-title');
            
            modal.classList.remove('hidden');
            
            if (mode === 'create') {
                title.innerText = "Create New Entry";
                idInput.value = "";
                idInput.disabled = false;
                idInput.classList.remove('bg-gray-100', 'text-gray-500');
                editor.setValue("{\n  \n}", -1);
            } else {
                title.innerText = "Modify Entry";
                idInput.value = id;
                idInput.disabled = true;
                idInput.classList.add('bg-gray-100', 'text-gray-500');
                editor.setValue(JSON.stringify(data, null, 2), -1);
            }
        };

        window.closeModal = () => document.getElementById('editor-modal').classList.add('hidden');

        window.saveDocument = async () => {
            const idInput = document.getElementById('doc-id');
            const jsonVal = editor.getValue();
            let parsedData;

            try { parsedData = JSON.parse(jsonVal); } 
            catch (e) { showToast("Invalid JSON Format", "error"); return; }

            const docId = idInput.value.trim();

            try {
                if (docId) {
                    await setDoc(doc(db, currentCollection, docId), parsedData, { merge: true });
                    showToast("Changes Saved Successfully", "success");
                } else {
                    await addDoc(collection(db, currentCollection), parsedData);
                    showToast("New Document Created", "success");
                }
                closeModal();
            } catch (error) {
                showToast(error.message, "error");
            }
        };

        window.editDoc = async (id) => {
            // Fetch fresh to ensure we don't edit stale data
            const docRef = doc(db, currentCollection, id);
            const docSnap = await import("https://www.gstatic.com/firebasejs/9.22.0/firebase-firestore.js").then(m => m.getDoc(docRef));
            if(docSnap.exists()) openModal('edit', id, docSnap.data());
        };

        // --- DELETE HANDLERS ---
        window.askDelete = (id) => {
            deleteTargetId = id;
            document.getElementById('delete-modal').classList.remove('hidden');
        };
        window.closeDeleteModal = () => document.getElementById('delete-modal').classList.add('hidden');
        window.confirmDelete = async () => {
            if (!deleteTargetId) return;
            try {
                await deleteDoc(doc(db, currentCollection, deleteTargetId));
                showToast("Item Deleted Permanently", "success");
                closeDeleteModal();
            } catch (error) { showToast(error.message, "error"); }
        };

        // --- TOAST ---
        window.showToast = (msg, type = 'success') => {
            const toast = document.getElementById('toast');
            document.getElementById('toast-msg').innerText = msg;
            document.getElementById('toast-icon').innerText = type === 'success' ? '✅' : '⚠️';
            
            toast.className = `fixed bottom-6 right-6 transform transition-all duration-300 z-[80] px-5 py-3 rounded-lg shadow-xl flex items-center gap-3 ${type === 'success' ? 'bg-slate-800 text-white' : 'bg-red-500 text-white'}`;
            
            setTimeout(() => toast.classList.add('translate-y-24', 'opacity-0'), 3000);
        };

        // Mobile Menu
        document.getElementById('mobile-menu-btn').addEventListener('click', () => {
            document.getElementById('sidebar').classList.toggle('-translate-x-full');
        });
    </script>
</body>
</html>
